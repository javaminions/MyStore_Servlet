<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

  <servlet>
    <servlet-name>IndexHandler</servlet-name>
    <servlet-class>servlets.IndexHandler</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>IndexHandler</servlet-name>
    <url-pattern>/indexHandler</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>init.jsp</welcome-file>
  </welcome-file-list>
</web-app> 